@using HairSalon.Models;
<!DOCTYPE html>
<html>
<head>
  <title>Hair Salon Database</title>
</head>
<body>
  <div>

    <h1>Hair Salon Database</h1>

    <ul>
      @if (Model.Count == 0)
      {
        <p>No clients have been added yet. Click the button below to add a client.</p>
      }
      @if(Model.Count != 0)
      {
        @foreach (Client client in Model)
        {
          <li><a href="/clients/@client.Id">@client.Name @client.</a></li>
        }
      }
    </ul>

    <hr>
    <p><a href="/clients/new">Add a new client</a></p>
    <p><a href="/">Home</a></p>
  </div>
</body>
</html>
