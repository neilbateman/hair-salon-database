<!DOCTYPE html>
<html>
<head>
  <title>Hair Salon Database</title>
</head>
<body>
  <div>
    <h1>Stylists</h1>
    @if (@Model.Count == 0)
    {
      <p>No stylists in database.</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (var stylist in Model)
      {
        <h5>@stylist.Name</h5>
        <p>@stylist.Details</p>
        <p><a href="/stylists/@stylist.Id">See client list</a></p>
      }
    }
    <p><a href="/stylists/new">Add a new stylist</a></p>
    <p><a href="/" class=>Home</a></p>
  </div>
</body>
</html>
